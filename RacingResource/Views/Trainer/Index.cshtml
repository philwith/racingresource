@using PagedList;
@using PagedList.Mvc;
@model PagedList<RacingResource.Models.Trainer>

@{
    ViewBag.Title = "Trainers";
}

<h2>Trainers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.PagedListPager(Model, p => Url.Action("Index", new {p}) )

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Surname)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Forename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                    Action
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @{                          
                        <li>@Html.ActionLink("Edit", "Edit", new { id=item.Id })</li>
                        <li>@Html.ActionLink("Details", "Details", new { id=item.Id })</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Delete", "Delete", new { id=item.Id })</li>   
                    }
                </ul>
            </div>
        </td>
    </tr>
}

</table>
